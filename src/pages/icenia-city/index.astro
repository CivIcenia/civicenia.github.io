---
import DefaultLayout from "@layouts/default.astro";
import { Astros } from "@helpers";
import { getBordersLink } from "@comptime";

const BASE = (import.meta.env.BASE_URL ?? "/");
const title = "Icenia City";
const description = "Welcome to Icenia City, the capital of the Republic of Icenia.";
---
<DefaultLayout title={title} description={description}>

    <!-- Full-width Hero Section -->
    <section class="city-hero">
        <div class="city-hero-overlay"></div>
        <div class="city-hero-content">
            <h1>Icenia City</h1>
            <p class="city-hero-subtitle">Heart of the Republic</p>
            <div class="city-hero-actions">
                <a href={BASE + "guide/"} class="icenia-btn">New Player Guide</a>
                <a href="https://discord.gg/dfwSjCjRN5" target="_blank" class="icenia-btn icenia-btn-secondary icenia-btn-tertiary" style="text-decoration: none;">Join Discord</a>
            </div>
        </div>
        <div class="icenia-scroll-hint">
            <span>Scroll to explore</span>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 5v14M5 12l7 7 7-7"/>
            </svg>
        </div>
    </section>



    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            
            <!-- Redesigned About Section -->
            <section class="city-about-section">
                <div class="city-about-header">
                    <h2 class="govuk-heading-l">Welcome to the Capital</h2>
                    <p class="govuk-body-l city-about-lead">
                        Where government, commerce, and community converge in the heart of the Republic.
                    </p>
                </div>
                
                <div class="city-about-grid">
                    <div class="city-about-feature">
                        <div class="city-about-feature-icon">üèõÔ∏è</div>
                        <h3>Seat of Power</h3>
                        <p>Home to the Senate, Presidential offices, and the administrative heart of the Republic.</p>
                    </div>
                    <div class="city-about-feature">
                        <div class="city-about-feature-icon">üí∞</div>
                        <h3>Trade Hub</h3>
                        <p>The Enron Exchange and bustling markets make this the commercial center of the -,- quadrant.</p>
                    </div>
                    <div class="city-about-feature">
                        <div class="city-about-feature-icon">üöÇ</div>
                        <h3>Connected</h3>
                        <p>International rail links and well-planned infrastructure connect you to the world.</p>
                    </div>
                    <div class="city-about-feature">
                        <div class="city-about-feature-icon">üè†</div>
                        <h3>Welcoming</h3>
                        <p>Whether trading, building, or exploring ‚Äî Icenia City has a place for everyone.</p>
                    </div>
                </div>

                <div class="city-about-image-showcase">
                    <img src="/assets/images/city_skyline_north.png" alt="Icenia City skyline looking north" />
                </div>
            </section>

            <!-- Services Grid -->
            <section class="city-services-section">
                <h2 class="govuk-heading-l city-section-title">City Services</h2>
                <p class="govuk-body-l city-section-intro">
                    Everything you need to know about living in and visiting Icenia City.
                </p>
                
                <div class="city-services-grid">
                    <a href={BASE + "icenia-city/laws/"} class="city-service-card">
                        <div class="city-service-icon">üìú</div>
                        <h3 class="city-service-title">City Laws</h3>
                        <p class="city-service-desc">
                            View the city charter, ordinances, and regulations governing Icenia City.
                        </p>
                        <span class="city-service-link">View Laws ‚Üí</span>
                    </a>

                    <a href={BASE + "icenia-city/council/"} class="city-service-card">
                        <div class="city-service-icon">üèõÔ∏è</div>
                        <h3 class="city-service-title">City Council</h3>
                        <p class="city-service-desc">
                            Meet the elected officials who govern and represent city residents.
                        </p>
                        <span class="city-service-link">View Council ‚Üí</span>
                    </a>

                    <a href={BASE + "icenia-city/shops/"} class="city-service-card">
                        <div class="city-service-icon">üè™</div>
                        <h3 class="city-service-title">Shops & Markets</h3>
                        <p class="city-service-desc">
                            Browse our commercial district, featuring the renowned Enron Exchange.
                        </p>
                        <span class="city-service-link">View Shops ‚Üí</span>
                    </a>

                    <a href={Astros.isDevMode() ? BASE + "government/map" : getBordersLink(Astro)} target="_blank" class="city-service-card">
                        <div class="city-service-icon">üó∫Ô∏è</div>
                        <h3 class="city-service-title">City Map</h3>
                        <p class="city-service-desc">
                            Explore Icenia City and the surrounding region on the CivMC map.
                        </p>
                        <span class="city-service-link">Open Map ‚Üí</span>
                    </a>
                </div>
            </section>

            <!-- Featured Locations -->
            <section class="city-locations-section">
                <h2 class="govuk-heading-l city-section-title">Notable Locations</h2>
                <p class="govuk-body-l city-section-intro">
                    Discover the landmarks that define Icenia City.
                </p>
                
                <div class="city-locations-grid">
                    <div class="city-location-card city-location-featured">
                        <div class="city-location-image" style="background-image: url('/assets/images/city_monument.png')"></div>
                        <div class="city-location-content">
                            <h3>Government District</h3>
                            <p>
                                The seat of the Senate and home to national monuments. While many key government buildings are here, the judiciary and some other offices are located elsewhere in the city.
                            </p>
                        </div>
                    </div>

                    <div class="city-location-card city-location-featured">
                        <div class="city-location-image" style="background-image: url('/assets/images/enron.png')"></div>
                        <div class="city-location-content">
                            <h3>Enron Exchange</h3>
                            <p>
                                The premier marketplace of the -,- quadrant. Discover a growing currency exchange, top-tier shops, and the region‚Äôs most advanced ore processing facilities.
                            </p>
                        </div>
                    </div>
                    
                    <div class="city-location-card city-location-featured">
                        <div class="city-location-image" style="background-image: url('/assets/images/jah_park.png')"></div>
                        <div class="city-location-content">
                            <h3>Jah Park</h3>
                            <p>
                                A tranquil green oasis at the heart of Icenia City, Jah Park is surrounded by the rail station, markets, factories, businesses, and apartments‚Äîoffering a peaceful retreat amid the city‚Äôs vibrant activity.
                            </p>
                        </div>
                    </div>
                    
                    <div class="city-location-card city-location-featured">
                        <div class="city-location-image" style="background-image: url('/assets/images/central_station.png')"></div>
                        <div class="city-location-content">
                            <h3>Central Station</h3>
                            <p>
                                Connected to the international rail network with easy access to all states of the Republic and beyond.
                            </p>
                        </div>
                    </div>

                </div>
            </section>

            <!-- Call to Action -->
            <section class="city-cta-section">
                <div class="city-cta-content">
                    <h2 class="govuk-heading-l">Ready to Join Us?</h2>
                    <p class="govuk-body-l">
                        Whether you're a new player looking for a home or an experienced builder 
                        seeking new opportunities, Icenia City has a place for you.
                    </p>
                    <div class="city-cta-actions">
                        <a href={BASE + "guide/"} class="icenia-btn">Read the Guide</a>
                        <a href="https://discord.gg/dfwSjCjRN5" target="_blank" class="icenia-btn-secondary">Join Our Discord</a>
                    </div>
                </div>
            </section>

        </main>
    </div>
</DefaultLayout>

<style>
    /* ==========================================
       HERO SECTION
       ========================================== */
    .city-hero {
        position: relative;
        background: url('/assets/images/city_monument.png') center/cover no-repeat;
        height: calc(100vh - var(--header-height-desktop, 56px) - var(--navbar-height, 54px));
        min-height: 500px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        overflow: hidden;
    }

    :global(body.menu-mode) .city-hero {
        height: calc(100vh - var(--header-height-desktop, 56px));
    }

    @media (max-width: 768px) {
        .city-hero {
            height: calc(100vh - var(--header-height-mobile, 44px) - var(--navbar-height, 54px));
            min-height: 400px;
        }
        :global(body.menu-mode) .city-hero {
            height: calc(100vh - var(--header-height-mobile, 44px));
        }
    }

    .city-hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to bottom,
            rgba(28, 112, 184, 0.3) 0%,
            rgba(11, 12, 12, 0.7) 100%
        );
        z-index: 1;
    }

    .city-hero-content {
        position: relative;
        z-index: 2;
        max-width: 700px;
        padding: 0 1.5rem;
    }

    .city-hero h1 {
        margin: 0 0 0.5rem 0;
        font-size: clamp(2.5rem, 8vw, 4.5rem);
        font-weight: 700;
        line-height: 1;
        text-shadow: 0 2px 20px rgba(0,0,0,0.3);
    }

    .city-hero-subtitle {
        font-size: clamp(1.125rem, 3vw, 1.5rem);
        margin: 0 0 2rem 0;
        opacity: 0.95;
    }

    .city-hero-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }





    @media (max-width: 768px) {
        .city-hero-scroll-hint { display: none; }
    }

    /* ==========================================
       ABOUT SECTION - Redesigned
       ========================================== */
    .city-about-section {
        padding: 3rem 0 4rem;
    }

    .city-about-header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 3rem;
    }

    .city-about-header h2 {
        margin-bottom: 0.75rem;
    }

    .city-about-lead {
        color: var(--icenia-muted, #6f777b);
        margin: 0;
    }

    .city-about-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .city-about-feature {
        text-align: center;
        padding: 1.5rem 1rem;
        background: white;
        border-radius: 4px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .city-about-feature:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
    }

    .city-about-feature-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .city-about-feature h3 {
        font-size: 1.125rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        color: #0b0c0c;
    }

    .city-about-feature p {
        font-size: 0.9375rem;
        color: var(--icenia-muted, #6f777b);
        margin: 0;
        line-height: 1.5;
    }

    .city-about-image-showcase {
        position: relative;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 8px 40px rgba(0,0,0,0.15);
    }

    .city-about-image-showcase img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        display: block;
    }

    @media (max-width: 900px) {
        .city-about-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 500px) {
        .city-about-grid {
            grid-template-columns: 1fr;
        }
        .city-about-image-showcase img {
            height: 250px;
        }
    }

    /* ==========================================
       SERVICES SECTION
       ========================================== */
    .city-services-section {
        padding: 3rem 0;
    }

    .city-section-title {
        text-align: center;
        margin-bottom: 0.5rem;
    }

    .city-section-intro {
        text-align: center;
        color: var(--icenia-muted, #6f777b);
        margin-bottom: 2rem;
    }

    .city-services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
    }

    .city-service-card {
        background: white;
        padding: 1.5rem;
        border-top: 4px solid var(--icenia-blue, #1C70B8);
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .city-service-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .city-service-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .city-service-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        color: #0b0c0c;
    }

    .city-service-desc {
        font-size: 0.9375rem;
        color: var(--icenia-muted, #6f777b);
        margin: 0 0 1rem 0;
        flex: 1;
    }

    .city-service-link {
        font-weight: 700;
        color: var(--icenia-blue, #1C70B8);
    }

    /* ==========================================
       LOCATIONS SECTION
       ========================================== */
    .city-locations-section {
        padding: 3rem 0;
    }

    .city-locations-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: auto auto;
        gap: 1.5rem;
    }

    .city-location-card {
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        overflow: hidden;
    }

    .city-location-featured {
        grid-row: span 2;
    }

    .city-location-image {
        height: 100%;
        min-height: 200px;
        background-size: cover;
        background-position: center;
    }

    .city-location-featured .city-location-image {
        height: 50%;
    }

    .city-location-content {
        padding: 1.5rem;
    }

    .city-location-content h3 {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        color: #0b0c0c;
    }

    .city-location-content p {
        margin: 0;
        color: var(--icenia-muted, #6f777b);
        font-size: 0.9375rem;
    }

    @media (max-width: 768px) {
        .city-locations-grid {
            grid-template-columns: 1fr;
        }
        .city-location-featured {
            grid-row: span 1;
        }
        .city-location-featured .city-location-image {
            height: 200px;
        }
    }

    /* ==========================================
       CTA SECTION
       ========================================== */
    .city-cta-section {
        background: var(--icenia-blue, #1C70B8);
        margin: auto;
        padding: 4rem 2rem;
        text-align: center;
        color: white;
    }

    @media (max-width: 768px) {
        .city-cta-section {
            margin: 3rem -15px;
            padding: 3rem 0 !important;
        }
    }

    .city-cta-content {
        max-width: 600px;
        margin: 0 auto;
    }

    .city-cta-content h2 {
        color: white;
        margin-bottom: 1rem;
    }

    .city-cta-content p {
        color: rgba(255,255,255,0.9);
        margin-bottom: 2rem;
    }

    .city-cta-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .city-cta-actions .icenia-btn {
        background: white;
        color: var(--icenia-blue, #1C70B8);
    }

    .city-cta-actions .icenia-btn:hover {
        background: var(--off-white, #eeeeee);
    }

    .city-cta-actions .icenia-btn-secondary {
        border-color: white;
        color: white;
    }

    .city-cta-actions .icenia-btn-secondary:hover {
        background: white;
        color: var(--icenia-blue, #1C70B8);
    }
</style>