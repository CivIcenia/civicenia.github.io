---
import PageLayout from "@layouts/page.astro";

const BASE = (import.meta.env.BASE_URL ?? "/");
const title = "Shops - Icenia City";
const description = "Browse the shops and markets of Icenia City.";
---

<PageLayout chin={false} title={title} description={description}>
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="govuk-heading-xl" style="margin-bottom: 10px;">Shops & Markets</h1>
        <p class="govuk-body-l">Commercial directory for Icenia City.</p>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-inset-text">
                <h2 class="govuk-heading-m">üõí Shop Explorer</h2>
                <p class="govuk-body">
                    We have launched an interactive <strong>Shop Explorer</strong> where you can search for 
                    items and prices across Icenia and the entire CivMC server.
                </p>
                <a href={BASE + "shops/"} class="govuk-button">Open Shop Explorer</a>
            </div>

            <h2 class="govuk-heading-m">Notable Locations</h2>
            <ul class="govuk-list govuk-list--bullet">
                <li><strong>Enron Exchange</strong> - The premier trading hub of the -,- quadrant</li>
                <li><strong>Market District</strong> - Various player-owned shops and stalls</li>
                <li><strong>Factory Building</strong> - Public factories for residents</li>
            </ul>

            <p class="govuk-body govuk-!-margin-top-6">
                Interested in setting up a shop? Check the 
                <a href={BASE + "icenia-city/laws/"} class="govuk-link">City Laws</a> for commercial regulations, 
                or visit our <a href="https://discord.gg/dfwSjCjRN5" target="_blank" class="govuk-link">Discord</a> 
                to inquire about available plots.
            </p>
        </div>
        <div class="govuk-grid-column-one-third">
            <div class="icenia-card">
                <h3 class="govuk-heading-s">üìç Quick Links</h3>
                <ul class="govuk-list">
                    <li><a href={BASE + "icenia-city/"} class="govuk-link">Icenia City Home</a></li>
                    <li><a href={BASE + "icenia-city/laws/"} class="govuk-link">City Laws</a></li>
                    <li><a href={BASE + "guide/"} class="govuk-link">New Player Guide</a></li>
                    <li><a href="https://discord.gg/dfwSjCjRN5" target="_blank" class="govuk-link">Discord Server</a></li>
                </ul>
            </div>
        </div>
    </div>
</PageLayout>
