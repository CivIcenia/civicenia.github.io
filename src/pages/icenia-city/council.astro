---
import { Councillors } from "@collections";
import PageLayout from "@layouts/page.astro";

const BASE = (import.meta.env.BASE_URL ?? "/");

// Load councillors from data file (managed via Decap CMS)
const mayor = Councillors.getMayor();
const councillorSeats = Councillors.getCouncillorSeats();
const councilTerm = Councillors.getCouncilTerm();

// Default avatar for councillors without profile pictures
const defaultAvatar = "https://cdn.discordapp.com/embed/avatars/0.png";
---

<style>
    .council-info {
        background: #f3f2f1;
        padding: 20px;
        margin-bottom: 30px;
        border-left: 6px solid #1D70B8;
    }
</style>

<PageLayout chin={false} title="City Council - Icenia City" description="Meet the elected officials of Icenia City Council.">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="govuk-heading-xl" style="margin-bottom: 10px;">Icenia City Council</h1>
        <p class="govuk-body-l">The elected representatives governing Icenia City.</p>
    </div>

    <!-- Council Information -->
    <div class="council-info">
        <h2 class="govuk-heading-m" style="margin-top: 0;">About the City Council</h2>
        <p class="govuk-body">
            The Icenia City Council is responsible for local governance within the capital city. 
            The Council manages city ordinances, zoning regulations, public infrastructure, and 
            local services for residents and businesses.
        </p>
        <p class="govuk-body" style="margin-bottom: 0;">
            Council members are elected by residents of Icenia City and serve to represent the 
            interests of the city's citizens within the broader Republic framework.
        </p>
    </div>

    <div class="officials-centred">
        <h2 class="section-title">Council Members ({councilTerm})</h2>
        <div class="officials-parent">
            <!-- Mayor -->
            {mayor.name && (
                <div class="officials-wrapper">
                    <div class="official-card">
                        <img src={mayor.icon || defaultAvatar} class="official-pfp" width="120px" height="120px" alt={mayor.name}/>
                        <span class="official-name">{mayor.name}</span>
                        <span class="official-titles">
                            <span class="official-title">Mayor</span>
                        </span>
                    </div>
                </div>
            )}

            <!-- Councillors -->
            {councillorSeats.map((councillor) => (
                <div class="officials-wrapper">
                    <div class="official-card">
                        <img src={councillor.icon || defaultAvatar} class="official-pfp" width="120px" height="120px" alt={councillor.name}/>
                        <span class="official-name">{councillor.name}</span>
                        <span class="official-titles">
                            <span class="official-title">Councillor (Seat {councillor.seat})</span>
                        </span>
                    </div>
                </div>
            ))}
        </div>
    </div>

    <!-- Links Section -->
    <div class="govuk-grid-row govuk-!-margin-top-6">
        <div class="govuk-grid-column-one-half">
            <div class="govuk-inset-text">
                <h3 class="govuk-heading-s">City Legislation</h3>
                <p class="govuk-body-s">
                    View the laws and ordinances passed by the City Council.
                </p>
                <a href={BASE + "icenia-city/laws/"} class="govuk-link">View City Laws &rarr;</a>
            </div>
        </div>
        <div class="govuk-grid-column-one-half">
            <div class="govuk-inset-text">
                <h3 class="govuk-heading-s">National Government</h3>
                <p class="govuk-body-s">
                    View the Republic of Icenia's government officials.
                </p>
                <a href={BASE + "government/officials/"} class="govuk-link">View National Officials &rarr;</a>
            </div>
        </div>
    </div>
</PageLayout>
