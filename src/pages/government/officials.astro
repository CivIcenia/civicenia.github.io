---
import { Structs } from "@helpers";
import PageLayout from "@layouts/page.astro";

// Use https://toolscord.com/ to get the pfps
const officials = [
    Structs.official(["President"], "ChrisChrispie", "https://cdn.discordapp.com/avatars/161282206113857537/17cccf139335fe0ae821b666d1de47f7?size=1024"),
    Structs.official(["Secretary of Defense"], "Drekamor", "https://cdn.discordapp.com/avatars/1031922996916527124/447fec9f4d18b1f7a0f54449a9fd963c?size=1024"),
    Structs.official(["Secretary of Interior"], "Cammo37", "https://cdn.discordapp.com/avatars/849695036085501974/a_c2d5826a31da0d30f7e455dd370a4800?size=1024"),
    Structs.official(["Secretary of Treasury"], "Anvil", "https://cdn.discordapp.com/avatars/164188981293088769/2c254c3c8280692107fdbc64612118f6?size=1024"),

    Structs.official(["Speaker of the Senate","Senator"], "Xcios", "https://cdn.discordapp.com/avatars/574380122539294726/a_03d32642fb654c9de616672c3d44c227?size=1024"),
    Structs.official(["Chief Magistrate", "Magistrate"], "SpeedyJustice", "https://cdn.discordapp.com/avatars/634227976904507422/e081a428f417b67ebdccddcd9952fc6c?size=1024"),
    Structs.official(["Senator"], "JuniorTide", "https://cdn.discordapp.com/avatars/662116538211368960/38264ee949657cd6119e0e5440b831d4?size=1024"),
    Structs.official(["Senator"], "Gjum", "https://cdn.discordapp.com/avatars/952698769177182249/70406531bfc7a5909bc0b0b587d03ac8?size=1024"),
    Structs.official(["Senator"], "Dr_Bacon_Hair", "https://cdn.discordapp.com/avatars/689297659907145831/770423dd13f0a6e5fe96df11159860de?size=1024"),
    Structs.official(["Senator"], "zolo17", "https://cdn.discordapp.com/avatars/284408888109957130/30aa94056d05d8e1cc43430628906faf?size=1024"),
    Structs.official(["Senator"], "Forged_TK", "https://cdn.discordapp.com/avatars/631974441089368072/ae10adb4d644d2239863899841d30a8d?size=1024"),
    Structs.official(["Senator","Magistrate"], "7_misun", "https://cdn.discordapp.com/avatars/143920509833314304/fe85af26411424f49a8a39e09bd14ff8?size=1024"),
];
---
<style>
    .officials-centred {
        text-align: center;
    }

    .officials-parent {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .officials-wrapper {
        width: 200px;
        flex: 0 0 200px;
        margin: 5px;
        text-align: center;
    }

    .official-card {
        width: 200px;
        border: 2px solid #1C1C1C;
        border-radius: 3px;
        margin: 0 auto;
        padding: 10px 0;
    }

    .official-pfp {
        display: block;
        margin: 5px auto;
        border-radius: 75px;
    }

    .official-name {
        display: block;
        font-weight: bold;
    }

    .official-title {
        display: block;
        font-size: 14px;
    }
</style>

<PageLayout chin={false}>
    <div class="officials-centred">
        <div class="officials-parent">
            {officials.map((official) => (
                <div class="officials-wrapper">
                    <div class="official-card">
                        <img src={official.pfp} class="official-pfp" width="150px" height="150px"/>
                        <span class="official-name">{official.name}</span>
                        <span class="official-titles">{official.titles.map((title) => <span class="official-title">{title}</span>)}</span>
                    </div>
                </div>
            ))}
        </div>
    </div>
</PageLayout>
