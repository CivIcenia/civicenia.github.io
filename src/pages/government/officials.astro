---
import { GovOfficials, RoleConfig } from "@collections";
import PageLayout from "@layouts/page.astro";

const BASE = (import.meta.env.BASE_URL ?? "/");

// Load role configuration
const republicRoles = RoleConfig.getRepublicRoles();

// Load officials from data file (managed via Decap CMS)
const officialsData = GovOfficials.getOfficials();
const senateTerm = GovOfficials.getSenateTerm();
const senateTermNumber = await GovOfficials.getLatestSenateTermNumber();

// Default avatar for officials without profile pictures
const defaultAvatar = "https://cdn.discordapp.com/embed/avatars/0.png";

// Group roles by section
const rolesBySection = republicRoles.reduce((acc, role) => {
    const section = role.section || 'other';
    if (!acc[section]) acc[section] = [];
    acc[section].push(role);
    return acc;
}, {} as Record<string, typeof republicRoles>);

// Define section display names
const sectionNames: Record<string, string> = {
    'executive': 'Executive Branch',
    'legislative': 'Senate',
};

// Format section title with term number
function formatSectionTitle(section: string): string {
    if (section === 'legislative') {
        const baseName = sectionNames[section] || section;
        if (senateTermNumber) {
            return `${baseName} of ${senateTerm} (Term ${senateTermNumber})`;
        }
        return `${baseName} of ${senateTerm}`;
    }
    return sectionNames[section] || section;
}
---

<style>
    .gov-info {
        background: #f3f2f1;
        padding: 20px;
        margin-bottom: 30px;
        border-left: 6px solid #1C70B8;
    }
</style>

<PageLayout chin={false} title="Government Officials - Republic of Icenia" description="Meet the elected officials of the Republic of Icenia.">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="govuk-heading-xl" style="margin-bottom: 10px;">Government Officials</h1>
        <p class="govuk-body-l">The elected representatives of the Republic of Icenia.</p>
    </div>

    <!-- Government Information -->
    <div class="gov-info">
        <h2 class="govuk-heading-m" style="margin-top: 0;">About the Government</h2>
        <p class="govuk-body">
            The Republic of Icenia operates under a democratic system with an Executive Branch 
            led by the President and Cabinet, and a legislative Senate elected by citizens.
        </p>
        <p class="govuk-body" style="margin-bottom: 0;">
            Officials serve to represent the interests of all Icenians and govern according to the 
            Constitution and laws of the Republic.
        </p>
    </div>

    <div class="officials-centred">
        {Object.entries(rolesBySection).map(([section, roles]) => (
            <>
                <h2 class="section-title">
                    {formatSectionTitle(section)}
                </h2>
                <div class="officials-parent">
                    {roles.map((role) => {
                        if (role.multi_seat) {
                            // Multi-seat role
                            const seats = officialsData.senators || [];
                            return seats.map((seat: any) => (
                                <div class="officials-wrapper">
                                    <div class="official-card">
                                        <img src={seat.icon || defaultAvatar} class="official-pfp" width="120px" height="120px" alt={seat.name}/>
                                        <span class="official-name">{seat.name}</span>
                                        <span class="official-titles">
                                            <span class="official-title">{role.display_name} (Seat {seat.seat})</span>
                                        </span>
                                    </div>
                                </div>
                            ));
                        } else {
                            // Single-seat role
                            const official = officialsData[role.id as keyof typeof officialsData];
                            if (!official || typeof official === 'string') return null;
                            const officialData = official as { name: string; icon?: string };
                            
                            return (
                                <div class="officials-wrapper">
                                    <div class="official-card">
                                        <img src={officialData.icon || defaultAvatar} class="official-pfp" width="120px" height="120px" alt={officialData.name || 'Vacant'}/>
                                        <span class="official-name">{officialData.name || 'Vacant'}</span>
                                        <span class="official-titles">
                                            <span class="official-title">{role.display_name}</span>
                                        </span>
                                    </div>
                                </div>
                            );
                        }
                    })}
                </div>
            </>
        ))}
    </div>

    <!-- Links Section -->
    <div class="govuk-grid-row govuk-!-margin-top-6">
        <div class="govuk-grid-column-one-half">
            <div class="govuk-inset-text">
                <h3 class="govuk-heading-s">Republic Laws</h3>
                <p class="govuk-body-s">
                    View the Constitution, statutes, and treaties of the Republic.
                </p>
                <a href={BASE + "laws/"} class="govuk-link">View Laws &rarr;</a>
            </div>
        </div>
        <div class="govuk-grid-column-one-half">
            <div class="govuk-inset-text">
                <h3 class="govuk-heading-s">States and Territories</h3>
                <p class="govuk-body-s">
                    Explore the diverse territories of the Republic.
                </p>
                <a href={BASE + "union/"} class="govuk-link">View the Union &rarr;</a>
            </div>
        </div>
    </div>
    </div>
</PageLayout>