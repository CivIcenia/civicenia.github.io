---
import { Structs } from "@helpers";
import PageLayout from "@layouts/page.astro";

const BASE = (import.meta.env.BASE_URL ?? "/");

// Use https://toolscord.com/ to get the pfps
const officials = [
    Structs.official(["President"], "ChrisChrispie", "https://cdn.discordapp.com/avatars/161282206113857537/0e246c5d1e815473a2035868cc7ed72a?size=1024"),
    Structs.official(["Secretary of Defense"], "Anvil", "https://cdn.discordapp.com/avatars/164188981293088769/2c254c3c8280692107fdbc64612118f6?size=1024"),
    Structs.official(["Secretary of Interior"], "SneedChungus", "https://cdn.discordapp.com/avatars/1224526027514970216/bb2b2edf8284811f3038f17c1c2cbdcb?size=1024"),
    Structs.official(["Secretary of Treasury"], "7Misun", "https://cdn.discordapp.com/avatars/143920509833314304/9bd4216b49f9d15a0766379e76a7c85e?size=1024"),
];

// Current Senate members
const senators = [
    Structs.official(["Speaker of the Senate"], "Oko", "https://cdn.discordapp.com/avatars/165189955012919296/4fe990172cfe1f3ab768aa11c0326543?size=1024"),
    Structs.official(["Senator"], "Dr_Bacon_Hair", "https://cdn.discordapp.com/avatars/689297659907145831/f5a93ea6ed6d9d23de6b15b1768b511d.png?size=1024"),
    Structs.official(["Senator"], "yodabird19", "https://cdn.discordapp.com/avatars/282286523011825666/5d8c2b301ab4a6008a341b04441ee5dd.png?size=1024"),
    Structs.official(["Senator"], "itsalreadygold", "https://cdn.discordapp.com/avatars/532060480651526146/a6507514df79cc631659b2068a9d29e0.png?size=1024"),
    Structs.official(["Senator"], "Zolo17", "https://cdn.discordapp.com/avatars/284408888109957130/9b643a71831d986540b1267d0ab458f8.png?size=1024"),
    Structs.official(["Senator"], "HsmNewfriend", "https://cdn.discordapp.com/avatars/1080275805277540423/a95d5aeab1df4316903742ae66cb75b2.png?size=1024"),
    Structs.official(["Senator"], "Jaimiemie", "https://cdn.discordapp.com/avatars/206334799160279041/5a0f6567c77a7d66f8cb5294e70058ac?size=1024"),
];

// Default avatar for officials without profile pictures
const defaultAvatar = "https://cdn.discordapp.com/embed/avatars/0.png";
---

<style>
    .gov-info {
        background: #f3f2f1;
        padding: 20px;
        margin-bottom: 30px;
        border-left: 6px solid #1D70B8;
    }
</style>

<PageLayout chin={false} title="Government Officials - Republic of Icenia" description="Meet the elected officials of the Republic of Icenia.">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="govuk-heading-xl" style="margin-bottom: 10px;">Government Officials</h1>
        <p class="govuk-body-l">The elected representatives of the Republic of Icenia.</p>
    </div>

    <!-- Government Information -->
    <div class="gov-info">
        <h2 class="govuk-heading-m" style="margin-top: 0;">About the Government</h2>
        <p class="govuk-body">
            The Republic of Icenia operates under a democratic system with an Executive Branch 
            led by the President and Cabinet, and a legislative Senate elected by citizens.
        </p>
        <p class="govuk-body" style="margin-bottom: 0;">
            Officials serve to represent the interests of all Icenians and govern according to the 
            Constitution and laws of the Republic.
        </p>
    </div>

    <div class="officials-centred">
        <h2 class="section-title">Executive Branch</h2>
        <div class="officials-parent">
            {officials.map((official) => (
                <div class="officials-wrapper">
                    <div class="official-card">
                        <img src={official.pfp || defaultAvatar} class="official-pfp" width="120px" height="120px" alt={official.name}/>
                        <span class="official-name">{official.name}</span>
                        <span class="official-titles">{official.titles.map((title) => <span class="official-title">{title}</span>)}</span>
                    </div>
                </div>
            ))}
        </div>

        <h2 class="section-title">Senate of September 2025</h2>
        <div class="officials-parent">
            {senators.map((senator) => (
                <div class="officials-wrapper">
                    <div class="official-card">
                        <img src={senator.pfp || defaultAvatar} class="official-pfp" width="120px" height="120px" alt={senator.name}/>
                        <span class="official-name">{senator.name}</span>
                        <span class="official-titles">{senator.titles.map((title) => <span class="official-title">{title}</span>)}</span>
                    </div>
                </div>
            ))}
        </div>
    </div>

    <!-- Links Section -->
    <div class="govuk-grid-row govuk-!-margin-top-6">
        <div class="govuk-grid-column-one-half">
            <div class="govuk-inset-text">
                <h3 class="govuk-heading-s">Republic Laws</h3>
                <p class="govuk-body-s">
                    View the Constitution, statutes, and treaties of the Republic.
                </p>
                <a href={BASE + "laws/"} class="govuk-link">View Laws &rarr;</a>
            </div>
        </div>
        <div class="govuk-grid-column-one-half">
            <div class="govuk-inset-text">
                <h3 class="govuk-heading-s">States and Territories</h3>
                <p class="govuk-body-s">
                    Explore the diverse territories of the Republic.
                </p>
                <a href={BASE + "union/"} class="govuk-link">View the Union &rarr;</a>
            </div>
        </div>
    </div>
</PageLayout>