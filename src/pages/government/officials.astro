---
import { GovOfficials } from "@collections";
import PageLayout from "@layouts/page.astro";

const BASE = (import.meta.env.BASE_URL ?? "/");

// Load officials from data file (managed via Decap CMS)
const president = GovOfficials.getPresident();
const speaker = GovOfficials.getSpeaker();
const secretaries = GovOfficials.getSecretaries();
const senators = GovOfficials.getSenators();
const senateTerm = GovOfficials.getSenateTerm();

// Default avatar for officials without profile pictures
const defaultAvatar = "https://cdn.discordapp.com/embed/avatars/0.png";
---

<style>
    .gov-info {
        background: #f3f2f1;
        padding: 20px;
        margin-bottom: 30px;
        border-left: 6px solid #1D70B8;
    }
</style>

<PageLayout chin={false} title="Government Officials - Republic of Icenia" description="Meet the elected officials of the Republic of Icenia.">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="govuk-heading-xl" style="margin-bottom: 10px;">Government Officials</h1>
        <p class="govuk-body-l">The elected representatives of the Republic of Icenia.</p>
    </div>

    <!-- Government Information -->
    <div class="gov-info">
        <h2 class="govuk-heading-m" style="margin-top: 0;">About the Government</h2>
        <p class="govuk-body">
            The Republic of Icenia operates under a democratic system with an Executive Branch 
            led by the President and Cabinet, and a legislative Senate elected by citizens.
        </p>
        <p class="govuk-body" style="margin-bottom: 0;">
            Officials serve to represent the interests of all Icenians and govern according to the 
            Constitution and laws of the Republic.
        </p>
    </div>

    <div class="officials-centred">
        <h2 class="section-title">Executive Branch</h2>
        <div class="officials-parent">
            <!-- President -->
            <div class="officials-wrapper">
                <div class="official-card">
                    <img src={president.icon || defaultAvatar} class="official-pfp" width="120px" height="120px" alt={president.name}/>
                    <span class="official-name">{president.name}</span>
                    <span class="official-titles">
                        <span class="official-title">President</span>
                    </span>
                </div>
            </div>

            <!-- Secretaries (Cabinet) -->
            {secretaries.map((secretary) => (
                <div class="officials-wrapper">
                    <div class="official-card">
                        <img src={secretary.slot.icon || defaultAvatar} class="official-pfp" width="120px" height="120px" alt={secretary.slot.name}/>
                        <span class="official-name">{secretary.slot.name}</span>
                        <span class="official-titles">
                            <span class="official-title">{secretary.title}</span>
                        </span>
                    </div>
                </div>
            ))}
        </div>

        <h2 class="section-title">Senate of {senateTerm}</h2>
        <div class="officials-parent">
            <!-- Speaker of the Senate -->
            {speaker.name && (
                <div class="officials-wrapper">
                    <div class="official-card">
                        <img src={speaker.icon || defaultAvatar} class="official-pfp" width="120px" height="120px" alt={speaker.name}/>
                        <span class="official-name">{speaker.name}</span>
                        <span class="official-titles">
                            <span class="official-title">Speaker of the Senate</span>
                        </span>
                    </div>
                </div>
            )}

            <!-- Senators -->
            {senators.map((senator) => (
                <div class="officials-wrapper">
                    <div class="official-card">
                        <img src={senator.icon || defaultAvatar} class="official-pfp" width="120px" height="120px" alt={senator.name}/>
                        <span class="official-name">{senator.name}</span>
                        <span class="official-titles">
                            <span class="official-title">Senator (Seat {senator.seat})</span>
                        </span>
                    </div>
                </div>
            ))}
        </div>
    </div>

    <!-- Links Section -->
    <div class="govuk-grid-row govuk-!-margin-top-6">
        <div class="govuk-grid-column-one-half">
            <div class="govuk-inset-text">
                <h3 class="govuk-heading-s">Republic Laws</h3>
                <p class="govuk-body-s">
                    View the Constitution, statutes, and treaties of the Republic.
                </p>
                <a href={BASE + "laws/"} class="govuk-link">View Laws &rarr;</a>
            </div>
        </div>
        <div class="govuk-grid-column-one-half">
            <div class="govuk-inset-text">
                <h3 class="govuk-heading-s">States and Territories</h3>
                <p class="govuk-body-s">
                    Explore the diverse territories of the Republic.
                </p>
                <a href={BASE + "union/"} class="govuk-link">View the Union &rarr;</a>
            </div>
        </div>
    </div>
</PageLayout>