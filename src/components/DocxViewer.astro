---
interface Props {
  url: string;
  viewer?: 'google' | 'office';
  width?: string;
  height?: string;
  title?: string;
}

const { 
  url: propUrl, 
  viewer = 'google', 
  width = '100%', 
  height = '800px', 
  title = 'Document Viewer' 
} = Astro.props;

// Construct the full URL if a relative path is provided
let fullUrl = propUrl;
if (propUrl.startsWith('/')) {
    // Use Astro.site if available, otherwise fallback to the known domain
    // Note: This requires "site" to be configured in astro.config.mjs
    const site = Astro.site ? Astro.site.toString() : 'https://civicenia.github.io';
    fullUrl = `${site.replace(/\/$/, '')}${propUrl}`;
}

const encodedUrl = encodeURIComponent(fullUrl);

let viewerUrl = '';
if (viewer === 'google') {
  viewerUrl = `https://docs.google.com/gview?url=${encodedUrl}&embedded=true`;
} else {
  // Microsoft Office Online Viewer
  viewerUrl = `https://view.officeapps.live.com/op/embed.aspx?src=${encodedUrl}`;
}
---

<div class="docx-viewer-container" data-full-url={fullUrl}>
  <div class="viewer-controls">
    <button class="viewer-toggle active" data-viewer="google">Google Viewer</button>
    <button class="viewer-toggle" data-viewer="office">Office Viewer</button>
  </div>
  <iframe
    src={viewerUrl}
    width={width}
    height={height}
    frameborder="0"
    title={title}
    allowfullscreen
    data-current-viewer={viewer}
  >
    <p>Your browser does not support iframes.</p>
  </iframe>
  <div class="viewer-actions">
    <a href={fullUrl} target="_blank" rel="noopener noreferrer" class="download-link">
      Download Document
    </a>
  </div>
</div>

<script>
  // Use a function that runs immediately, checking if DOM is ready
  function initViewerToggles() {
    const containers = document.querySelectorAll('.docx-viewer-container');
    
    containers.forEach(container => {
      const iframe = container.querySelector('iframe') as HTMLIFrameElement;
      const toggleButtons = container.querySelectorAll('.viewer-toggle');
      const fullUrl = container.getAttribute('data-full-url') || '';
      const encodedUrl = encodeURIComponent(fullUrl);
      
      toggleButtons.forEach(button => {
        button.addEventListener('click', () => {
          const viewer = button.getAttribute('data-viewer');
          
          // Update active state
          toggleButtons.forEach(btn => btn.classList.remove('active'));
          button.classList.add('active');
          
          // Update iframe src
          let newViewerUrl = '';
          if (viewer === 'google') {
            newViewerUrl = `https://docs.google.com/gview?url=${encodedUrl}&embedded=true`;
          } else if (viewer === 'office') {
            newViewerUrl = `https://view.officeapps.live.com/op/embed.aspx?src=${encodedUrl}`;
          }
          
          iframe.src = newViewerUrl;
          iframe.setAttribute('data-current-viewer', viewer || '');
        });
      });
      
      // Set initial active state based on current viewer
      const currentViewer = iframe.getAttribute('data-current-viewer');
      if (currentViewer) {
        toggleButtons.forEach(btn => {
          if (btn.getAttribute('data-viewer') === currentViewer) {
            btn.classList.add('active');
          } else {
            btn.classList.remove('active');
          }
        });
      }
    });
  }

  // Run immediately if DOM is ready, otherwise wait for it
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initViewerToggles);
  } else {
    initViewerToggles();
  }
</script>

<style>
  .docx-viewer-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  .viewer-controls {
    display: flex;
    gap: 8px;
    margin-bottom: 8px;
  }
  
  .viewer-toggle {
    padding: 8px 16px;
    background-color: #f6f8fa;
    color: #24292e;
    border: 1px solid #d1d5da;
    border-radius: 4px;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .viewer-toggle:hover {
    background-color: #e1e4e8;
    border-color: #959da5;
  }
  
  .viewer-toggle.active {
    background-color: #0366d6;
    color: white;
    border-color: #0366d6;
  }
  
  .viewer-toggle.active:hover {
    background-color: #0255b3;
    border-color: #0255b3;
  }
  
  iframe {
    border: 1px solid #e1e4e8;
    background-color: #fff;
    width: 100%;
  }

  .viewer-actions {
    text-align: right;
  }

  .download-link {
    display: inline-block;
    padding: 8px 16px;
    background-color: #0366d6;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
  }

  .download-link:hover {
    background-color: #0255b3;
  }
</style>
